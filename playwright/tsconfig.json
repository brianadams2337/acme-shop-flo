{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node", "expect-playwright"],
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true
  },
  "include": [
    "./tests/**/*.ts",
    "./fixtures/**/*.ts",
    "./page-objects/**/*.ts",
    "./playwright.config.ts",
    "./support/**/*.ts",
    "../../../tools/artillery/fromHomeToBasket.spec.ts",
    "../../../tools/artillery/testScripts.ts"
  ],
  "exclude": ["node_modules", "playwright-report"]
}
